<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <style name="QuestionWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="QuestionIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="HrSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="HrMountain" parent="HrSeparator">
        <item name="android:background">@color/question_mountain_color</item>
    </style>
    <style name="HrWater" parent="HrSeparator">
        <item name="android:background">@color/question_water_color</item>
    </style>
    <style name="HrCiv" parent="HrSeparator">
        <item name="android:background">@color/question_civ_color</item>
    </style>
    <style name="HrNature" parent="HrSeparator">
        <item name="android:background">@color/question_nature_color</item>
    </style>

    <style name="QuestionNumTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="QuestionText" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="QuestionSelectAnswerMountain" parent="QuestionText">
        <item name="buttonTint">@color/question_mountain_color</item>
    </style>
    <style name="QuestionSelectAnswerWater" parent="QuestionText">
        <item name="buttonTint">@color/question_water_color</item>
    </style>
    <style name="QuestionSelectAnswerCiv" parent="QuestionText">
        <item name="buttonTint">@color/question_civ_color</item>
    </style>
    <style name="QuestionSelectAnswerNature" parent="QuestionText">
        <item name="buttonTint">@color/question_nature_color</item>
    </style>
</resources>